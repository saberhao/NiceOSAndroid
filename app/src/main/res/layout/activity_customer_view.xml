    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <com.coder.nosandroid.niceosandroid.sampleCustomerView.CameraView
            android:layout_width="300dp"
            android:layout_height="300dp"/>
        <com.coder.nosandroid.niceosandroid.sampleCustomerView.DashboardView
            android:layout_width="300dp"
            android:layout_height="300dp"/>
        <com.coder.nosandroid.niceosandroid.sampleCustomerView.PieChartView
            android:layout_width="300dp"
            android:layout_height="300dp"/>
        <com.coder.nosandroid.niceosandroid.sampleCustomerView.ImageTextView
            android:layout_width="match_parent"
            android:layout_height="500dp"/>
        <com.coder.nosandroid.niceosandroid.sampleCustomerView.BezierView
            android:layout_width="300dp"
            android:layout_height="500dp"/>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>